<%= form_for @book, html: { class: "form-horizontal" } do |f| %>

  <% unless @book.errors.empty? %>
    <div class="alert">
      <h2>Failed to save book.</h2>
      <% @book.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="title">Title</label>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="title">Authors</label>
      <div class="controls">
        <%= f.text_field :authors %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="title">ISBN</label>
      <div class="controls">
        <%= f.text_field :isbn %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="title">Descriptions</label>
      <div class="controls">
        <%= f.text_area :description %>
      </div>
    </div>
  </fieldset>
  <div class="controls">
    <%= f.submit "Save", class: "btn-primary" %> or 
    <%= link_to "Cancel", books_path %>
  </div>
<% end %>
