<%= form_for [@reservation.book, @reservation] do |f| %>

  <% unless @reservation.errors.empty? %>
    <h2>Failed to reservation.</h2>
    <% @reservation.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>
  <div>
    Email: <br />
    <%= f.text_field :email %>
  </div>
  <%= f.submit "Save" %> or 
  <%= link_to "Cancel", book_path(@reservation.book) %>
<% end %>
